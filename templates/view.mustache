{{!
    @template block_superframe/view

    This template renders a url in an iframe of given size.

    Example context (json):
    {
        "heading": "My superframe",
        "userdetail": "joe user",
        "url": "#",
        "height": "400",
        "width": "600",
        "modallinktext": "link",
        "returnlink": "#"
        "returntext": "link"
    }
}}
<div  class="container">
    <h5>{{heading}}</h5>
    <p>Welcome {{userdetail}} </p>
    {{> block_superframe/links}}
    <iframe src="{{url}}" height="{{height}}" width="{{width}}">
    </iframe>
    <p id="block_superframe_about" class="text-primary">{{modallinktext}}</p>
    <p><a href="{{{returnlink}}}">{{returntext}}</a></p>
</div>